{
  "name": "universal-name-formatter",
  "version": "1.0.0",
  "description": "Universal name formatter with locale-specific support for proper name capitalization across languages",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "build": "npm run clean && vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "dev": "vite build --watch",
    "start": "python -m http.server 8080 || python3 -m http.server 8080 || npx serve .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "semantic-release": "semantic-release",
    "prepublishOnly": "npm run build && npm run test",
    "release": "npm run build && npm run test && npm publish"
  },
  "keywords": [
    "name",
    "formatter",
    "name-formatter",
    "capitalization",
    "capitalize",
    "international",
    "locale",
    "multilingual",
    "i18n",
    "l10n",
    "french",
    "italian",
    "spanish",
    "german",
    "dutch",
    "irish",
    "english",
    "apostrophe",
    "typography",
    "text-processing",
    "string-formatting",
    "unicode",
    "proper-names",
    "personal-names",
    "human-names",
    "normalize",
    "clean",
    "validation",
    "text-normalization",
    "case-conversion",
    "title-case",
    "proper-case",
    "linguistic",
    "grammar",
    "particles",
